package com.simplecalc;

import java.util.Scanner;

public class SimpleCalc {

	public static void main(String[] args) {
		System.out.print("Please, enter height of the pyramid: ");
		Scanner in = new Scanner(System.in);
		int i, x = in.nextInt();

		for(i = 1; i <= 4; i++) {
			for(int j = 1; j <= i; j++) {
				System.out.print("*");
			}
		System.out.println();
		}
		for(x = 3; x >= 1; x--) {
			for(int y = 1; y <= x; y++) {
				System.out.print("*");
			}
	System.out.println();
		}
	
	}
}